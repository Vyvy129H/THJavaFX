<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.demo3.Login.Sign"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER">
        <Label style="-fx-font-size: 40px">Tạo tài khoản mới</Label>
        <Label>Tên đăng nhập</Label>
        <TextField fx:id="Username"/>
        <Label>Nhập mật khẩu </Label>
        <PasswordField fx:id="Password"/>
        <Label>Nhập lại mật khẩu</Label>
        <PasswordField fx:id="ConfirmPassword"/>
        <Button text="Đăng ký" fx:id="signButton" />
        <Button text="Home" fx:id="homeButton"/>
    </VBox>
</HBox>
