<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo3.BMIView"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER">
        <Label>Nhập chều cao của bạn </Label>
        <TextField fx:id="Height"/>
        <Label>Nhập cân nặng của bạn</Label>
        <TextField fx:id="Weight"/>
        <Button text="CheckBMI" onAction="#checkBMI"/>

    </VBox>

</HBox>
